CONFIG_TARGET_ipq60xx=y
CONFIG_TARGET_ipq60xx_generic=y
CONFIG_TARGET_ipq60xx_DEVICE_redmi_ax3000=y

# 常用功能
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_pppoe=y

# 无线
CONFIG_PACKAGE_kmod-ath11k=y
CONFIG_PACKAGE_kmod-ath11k-ahb=y
CONFIG_PACKAGE_kmod-ath11k-pci=y

# USB
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y

# 网络增强
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_kmod-nft-offload=y
CONFIG_PACKAGE_kmod-nft-nat=y

# 系统工具
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_nano=y

# 显式禁用有问题的包
# (确保不会被 defconfig 自动重新选上)
# gpio-button-hotplug 在当前内核中不兼容
# CONFIG_PACKAGE_gpio-button-hotplug is not set
